{{!
    @template theme_bambuco/courseheader_teacher

    This template renders the course header with teacher information.

    Example context (json):
    {
        "hasteachers": true,
        "teachers": [
            {
                "image": "<img src=\"http://localhost/moodle/theme/image.php/essential/core/1470127868/u/f1\" alt=\"\" class=\"userpicture defaultuserpic\" width=\"100\" height=\"100\" />",
                "name": "Teacher 1",
                "improvedname": "<span>Teacher</span> <span>1</span>",
                "url": "http://localhost/moodle/user/view.php?id=2"
            }
        ]
    }
}}

{{#hasteachers}}
    <div class="courseheader_teacher">
        {{#teachers}}
            <div>
                <div class="picture">
                    {{{image}}}
                </div>
                <div class="detail">
                    <a href="{{url}}">{{{improvedname}}}</a>
                </div>
            </div>
        {{/teachers}}
    </div>
{{/hasteachers}}